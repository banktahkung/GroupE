<!DOCTYPE html>
<html>
  <head>
    <title>Excel File Management System</title>
    <link rel="stylesheet" type="text/css" href="/css/excelconvert.css" />
    <script src="https://cdnjs.cloudflare.com/ajax/libs/xlsx/0.18.5/xlsx.full.min.js"></script>
    <script src="/js/attribute.js"></script>
    <script src="/js/exportexcel.js"></script>
  </head>
  <body>
    <div class="HeaderContainer">
      <div class="FileUploadButton">
        <div class="OptionHeader">
          <label for="fileInput" class="fileInput">
            <div class="InputText">
              <div class="PlusText">+</div>
              <div class="AddText">Input File</div>
            </div>
          </label>
          <div class="ProfileSelect">
            <div class="profileSelect" onclick="DropdownContent()">
              <div class="PlusText">-</div>
              <div class="AddProfile" id="AddProfile">Select Profile</div>
            </div>
            <div class="ProfileDropdown" id="ProfileDropdown">
              <div
                class="ProfileSelectButton"
                onclick="SelectProfile(this)"
              >
                Default Profile
              </div>
            </div>
          </div>
          <div class="FileDrawer">
            <div class="fileDrawer" onclick="FileDropdownContent()">
              File Inventory
            </div>
            <div class="fileDrawerDropdown" id="fileDrawerDropdown">
              <div
                class="FileDropdown first"
                style="border-radius: 30px; border-bottom: none"
              >
                <div class="fileName">> No file</div>
                <div class="FileConfig">
                  <img class="ConfigGear" src="/image/config.png" />
                </div>
                <div class="fileConfigPanel" id="fileConfigPanel">
                  <div class="fileConfigButton fileDelete first">Delete File</div>
                </div>
              </div>
            </div>
          </div>
          <input
            type="file"
            id="fileInput"
            style="display: none"
            accept=".xlsx, .xls, .xlsm"
          />
        </div>
      </div>
    </div>

    <div class="ExcelFileShowcase">
      <div class="ShowcaseFile" id="ShowcaseFile">
        <div class="FileInputMessage" id="FileInputMessage">
          <div class="TextInputContainer">
            <div class="topText">Please select a file</div>
            <div class="bottomText">(or drop the file(s) in this area)</div>
          </div>
        </div>
        <div class="ShowcaseArea">
          <div class="XAxisIndicator Input" id="XAxisIndicator"></div>
          <div class="FileContentContainer">
            <div class="YAxisIndicator Input" id="YAxisIndicator"></div>
            <div class="FileContent" id="FileContent"></div>
          </div>
        </div>
      </div>
      <div class="IndicatorContainer">
        <div class="CurrentProfileDeclaration" id="CurrentProfileDeclaration">
          No Profile Selected
        </div>
        <div class="ConvertArrowContainer">
          <div
            class="ConvertArrow Disabled"
            id="ConvertArrow"
            onclick="downloadExcel()"
          >
            â®•
          </div>
        </div>
      </div>
      <div class="OutputFile">
        <div class="FileOutputMessage" id="FileOutputMessage">
          Result will be shown here
        </div>
        <div class="ShowcaseArea">
          <div class="XAxisIndicator Output" id="XAxisIndicator"></div>
          <div class="FileContentContainer">
            <div class="YAxisIndicator Output" id="YAxisIndicator"></div>
            <div class="FileContent Output" id="FileContent"></div>
          </div>
        </div>
      </div>
    </div>

    <div class="WarningWindow" id="WarningWindow">
      <div class="WarningBlockContainer">
        <div class="WarningBlock">
          <div class="WarningMessage" id="WarningMessage"></div>
          <div class="WarningClosingButtonContainer">
            <div class="WarningClosingButton" onclick="ClosingWarningWindow()">
              Close
            </div>
          </div>
        </div>
      </div>
    </div>
    
    <div class="versionNumber">Release Version : Beta 1.1.1</div>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/xlsx/0.17.0/xlsx.full.min.js"></script>
    <script src="/js/excelconvert.js"></script>
  </body>
</html>
